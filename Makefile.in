prefix = @prefix@
PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@

GREP = @GREP@
INSTALL = @INSTALL@
MKDIR_P = @MKDIR_P@

find = @find@
m4 = @m4@
tar = @tar@
zip = @zip@

dist_name = $(PACKAGE_NAME)-$(PACKAGE_VERSION)
share_dir_rel = share/${PACKAGE_NAME}
build_dir = tmp/build
all_dir = tmp/all

src_files = $(shell $(find) src -type f ! -name '*~' ! -name '\#*\#' -print)

step_files := ${src_files}
step_files := ${step_files:src/%=${build_dir}/%}
step_files := ${step_files:${build_dir}/share/%=${build_dir}/${share_dir_rel}/%}
step_files := ${step_files:${build_dir}/%=${all_dir}/%}

all_files = ${step_files}

install_files = $(all_files:${all_dir}/%=${prefix}/%)

.PHONY: all clean distclean install uninstall dist zip

#############################################################################
# all

all: $(all_files)

${all_dir}/%: ${build_dir}/%
	${MKDIR_P} ${dir $@}
	${INSTALL} -m 644 $< $@

#############################################################################
# build

${build_dir}/${share_dir_rel}/%: src/share/%
	$(MKDIR_P) $(dir $@)
	cp $< $@

${build_dir}/%: src/%
	$(MKDIR_P) $(dir $@)
	cp $< $@

#############################################################################
# install

install: $(install_files)

uninstall:
	$(RM) $(install_files)

$(prefix)/bin/%: ${all_dir}/bin/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) -m 755 $< $@

${prefix}/%: ${all_dir}/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) -m 644 $< $@

#############################################################################

clean:
	$(RM) -r tmp/all
	$(RM) $(wildcard *~)

distclean: clean
	$(RM) -r autom4te.cache tmp
	$(RM) Makefile config.log config.status stow.mk

zip: all
	$(RM) -r tmp/$(dist_name)
	$(MKDIR_P) tmp/$(dist_name)
	(cd tmp/all && $(tar) cf - .) | (cd tmp/$(dist_name) && $(tar) xf -)
	cd tmp && $(zip) -9 -r $(dist_name).zip $(dist_name)

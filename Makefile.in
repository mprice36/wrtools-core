SHELL = @bash@

PACKAGE_NAME = @PACKAGE_NAME@
PACKAGE_VERSION = @PACKAGE_VERSION@

prefix = @prefix@

GREP = @GREP@
INSTALL = @INSTALL@
MKDIR_P = @MKDIR_P@

find = @find@
m4 = @m4@
tar = @tar@
zip = @zip@

src_files = $(shell $(find) src -type f ! -name '*~' ! -name '\#*\#' -print)

all_files = $(src_files:src/%=tmp/all/%)

install_files = $(src_files:src/%=$(prefix)/%)

# DIST stuff
dist_name = $(PACKAGE_NAME)-$(PACKAGE_VERSION)

.PHONY: all clean distclean install uninstall dist zip

all: $(all_files)

tmp/all/%: src/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) $< $@
	if [[ -x $< ]]; then chmod uog+x $@; fi

clean:
	$(RM) -r tmp/all
	$(RM) $(wildcard *~)

distclean: clean
	$(RM) -r autom4te.cache tmp
	$(RM) Makefile config.log config.status stow.mk

install: $(install_files)

$(prefix)/%: tmp/all/%
	$(MKDIR_P) $(dir $@)
	$(INSTALL) $< $@
	if [[ -x $< ]]; then chmod uog+x $@; fi

uninstall:
	$(RM) $(install_files)

zip: all
	$(RM) -r tmp/$(dist_name)
	$(MKDIR_P) tmp/$(dist_name)
	(cd tmp/all && $(tar) cf - .) | (cd tmp/$(dist_name) && $(tar) xf -)
	cd tmp && $(zip) -9 -r $(dist_name).zip $(dist_name)
